########################################
# Example .env for Flight Ticket Monitor
# Copy this file to `.env` and fill values
########################################

# -------------------------------
# SMTP (required to send emails)
# -------------------------------
# SMTP server hostname or IP
SMTP_HOST=smtp.example.com
# SMTP port (587 for STARTTLS, 465 for SSL)
SMTP_PORT=587
# SMTP username (or empty for anonymous)
SMTP_USER=your_smtp_user@example.com
# SMTP password or app-specific password
SMTP_PASS=your_smtp_password
# Encryption: tls, ssl, or leave empty for none
SMTP_SECURE=tls
# From address and name used in outgoing emails
SMTP_FROM=monitor@example.com
SMTP_FROM_NAME="Flight Monitor"

# -------------------------------
# Optional runtime configuration
# -------------------------------
# Path to Node.js binary used by fetcher.js (optional)
NODE_PATH=/usr/local/bin/node
# Path to the optional fetcher script (relative to project root)
FETCHER_SCRIPT=fetcher.js

# -------------------------------
# Database
# -------------------------------
# SQLite file path (relative to project root)
DB_FILE=subscriptions.db

# -------------------------------
# Unsubscribe token secret
# -------------------------------
# Strong random secret used to generate HMAC tokens for unsubscribe links.
# You may either set this here or let the app persist a generated secret to
# .unsubscribe_secret (which should NOT be committed). Example:
UNSUBSCRIBE_SECRET=replace_this_with_a_strong_random_value
