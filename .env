# Copy this file to .env and fill in your real credentials
# SMTP settings (required for sending emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user@example.com
SMTP_PASS=your_smtp_password
SMTP_SECURE=tls  # 'tls' for STARTTLS (587), 'ssl' for SMTPS (465), or empty for no encryption
SMTP_FROM=monitor@example.com
SMTP_FROM_NAME=Flight Monitor

# Optional: Node fetcher and DB
NODE_PATH=/usr/local/bin/node
FETCHER_SCRIPT=fetcher.js
DB_FILE=subscriptions.db
